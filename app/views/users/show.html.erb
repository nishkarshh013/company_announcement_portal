<div class="all-post mb-4">
  <div class="card">
    <div class="card-body">
      <div class="show-profile">
        <h5>User Profile info</h5>
        <div>
          <% if @user.image.attached? %>
            <%= image_tag @user.image, alt: "User image", class: "post-image rounded-circle" %>
          <% else %>
            <%= image_tag asset_path('profile.svg'), alt: "Default profile image", class: "post-image rounded-circle" %>
          <% end %>

        </div>

        <div>
          <span>Email:</span>
          <%= @user.full_name%>
        </div>

        <div>
          <span>Email:</span>
          <%= @user.email %>
        </div>

        <div>
          <span>Created At:</span>
          <%= @user.created_at %>
        </div>
      </div>
      <%= link_to "Edit Profile", edit_user_path(current_user) %>
    </div>
  </div>
</div>


  <%= render 'users/user_post'%>
